<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="숫자 야구 게임!"
            android:textSize="50sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="위"
                android:onClick="btnUP1"/>

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:text="0"
                android:maxLength="1"
                android:textSize="30sp"/>

            <Button

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아래"
                android:onClick="btnDOWN1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="위"
                android:onClick="btnUP2"/>

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:text="0"
                android:maxLength="1"
                android:textSize="30sp"/>

            <Button

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아래"
                android:onClick="btnDOWN2"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="위"
                android:onClick="btnUP3"/>

            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:text="0"
                android:maxLength="1"
                android:textSize="30sp"/>

            <Button

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아래"
                android:onClick="btnDOWN3"/>
        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="check"
            android:onClick="clickCheck"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#000000">

        <ScrollView
            android:id="@+id/scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbarFadeDuration="0"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:verticalScrollbarPosition="right"
            android:scrollbarStyle="outsideInset"
            android:scrollbarThumbVertical="@color/white">

        <TextView
            android:id="@+id/tv_anser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:scrollbars="vertical"
            android:textColor="#00ff00"
            android:fadeScrollbars="false"
            />
        </ScrollView>
    </LinearLayout>
</LinearLayout>
